# II-Agent Railway Deployment Environment Variables
# Copy this file to .env for local development

# ==========================================
# LLM API KEYS
# ==========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=/app/gcp-credentials.json

# ==========================================
# APPLICATION SETTINGS
# ==========================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# ==========================================
# CORS SETTINGS
# ==========================================
ALLOWED_ORIGINS=https://ii-agent-frontend.pages.dev,https://*.ii-agent-frontend.pages.dev,http://localhost:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
ALLOWED_HEADERS=*
ALLOW_CREDENTIALS=true

# ==========================================
# SESSION MANAGEMENT
# ==========================================
SECRET_KEY=your_super_secret_key_minimum_32_characters_long_for_security
SESSION_TIMEOUT=3600
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Railway PostgreSQL (automatically provided)
DATABASE_URL=${{Postgres.DATABASE_URL}}
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_ECHO=false

# ==========================================
# REDIS CONFIGURATION (Optional)
# ==========================================  
REDIS_URL=${{Redis.REDIS_URL}}
REDIS_MAX_CONNECTIONS=10
CACHE_TTL=3600

# ==========================================
# WEBSOCKET SETTINGS
# ==========================================
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300
WS_MESSAGE_MAX_SIZE=1048576

# ==========================================
# FILE STORAGE
# ==========================================
STORAGE_TYPE=local
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# For S3 Storage (optional):
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret  
# AWS_S3_BUCKET=your_bucket_name
# AWS_REGION=us-east-1

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ENABLED=true

# ==========================================
# MONITORING & LOGGING
# ==========================================
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOGGING_FORMAT=json
ENABLE_METRICS=true

# ==========================================
# AGENT CONFIGURATION
# ==========================================
DEFAULT_MODEL=claude-3-sonnet
MAX_TOKENS=4096
TEMPERATURE=0.7
MAX_ITERATIONS=10
ENABLE_TOOLS=true

# ==========================================
# SECURITY SETTINGS
# ==========================================
ENABLE_HTTPS_REDIRECT=true
SECURE_COOKIES=true
CSRF_PROTECTION=true